{
  "appsettings": {
    "appName": "$[APP_NAME]",
    "OfferPriceManagerBaseUrl": "$[K8_HOST]/offer-price-manager/",
    "RewardsMarketMirrorBaseUrl": "$[K8_HOST]/rewards-market-mirror/",
    "webApiUrl": "$[K8_HOST]/rewards-rewards-service/"
  },
  "ConnectionStrings": {
     "RewardsContext": "Host=$[postgres_host];Database=$[postgres_database];Username=$[postgres_username];Password=$[postgres_password]"
  },
  "kafka": {
    "bootstrapServers": "localhost:9092",
    "security": {
      "SecurityProtocol": null,
      "SaslUsername": null,
      "SaslPassword": null,
      "SaslMechanism": "Plain"
    },
    "environment": { "id": "local" },
    "producerProfiles": {
      "BetUpdates": {
        "topic": "ksp.bet.updates",
        "compressionType": "lz4",
        "compressionLevel": 4
      },
      "RewardUpdates": {
        "topic": "rewards.reward.updates",
        "compressionType": "lz4",
        "compressionLevel": 4
      }
    },
    "consumerProfiles": {
      "RewardUpdates": {
        "group": "rewards_service.acctests.RewardUpdated",
        "topic": "rewards.reward.updates"
      },
      "TemplateUpdates": {
        "group": "rewards_service.acctests.RewardTemplateCreated",
        "topic": "rewards.template.updates"
      },
      "ClaimUpdates": {
        "group": "rewards_service.acctests.RewardClaimSettlement",
        "topic": "rewards.claims.updates"
      }
    }
  },
  "blueprints": {
    "defaultTemplate": "UB_NO_REWARDS_FALLBACK",
    "lockedTemplates": [
      "UB_NO_REWARDS_FALLBACK",
      "UB_NEW"
    ],
    "templates": [
      {
        "title": "UB_NEW",
        "Description": ""
      },
      {
        "title": "UB_STANDARD",
        "Description": ""
      },
      {
        "title": "UB_VALUED_SMALL",
        "Description": ""
      },
      {
        "title": "UB_VALUED_MEDIUM",
        "Description": ""
      },
      {
        "title": "UB_VALUED_LARGE",
        "Description": ""
      },
      {
        "title": "UB_VIP_SMALL",
        "Description": ""
      },
      {
        "title": "UB_VIP_MEDIUM",
        "Description": ""
      },
      {
        "title": "UB_VIP_LARGE",
        "Description": ""
      },
      {
        "title": "NO_REWARDS",
        "Description": ""
      },
      {
        "title": "UB_NO_REWARDS_FALLBACK",
        "Description": ""
      }
    ]
  }
}
